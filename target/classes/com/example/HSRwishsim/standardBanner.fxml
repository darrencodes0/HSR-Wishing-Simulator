<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.HSRwishsim.StandardBanner">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1270.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/standardBanner.png" />
         </image>
      </ImageView>
      <Button fx:id="switchToLightCone" layoutY="201.0" mnemonicParsing="false" onAction="#switchToLightConeBanner" opacity="0.0" prefHeight="45.0" prefWidth="117.0" text="Button" />
      <Button fx:id="switchToEvent" layoutY="139.0" mnemonicParsing="false" onAction="#switchToEventBanner" opacity="0.0" prefHeight="45.0" prefWidth="117.0" text="Button" />
      <Button fx:id="singleSummon" layoutX="750.0" layoutY="617.0" mnemonicParsing="false" onAction="#singleSummon" opacity="0.0" prefHeight="39.0" prefWidth="202.0" text="Button" />
      <Button fx:id="multiSummon" layoutX="961.0" layoutY="617.0" mnemonicParsing="false" onAction="#multiSummon" opacity="0.0" prefHeight="39.0" prefWidth="202.0" text="Button" />
      <Button fx:id="checkDrops" layoutX="369.0" layoutY="624.0" mnemonicParsing="false" onAction="#checkDrops" prefHeight="39.0" prefWidth="145.0" style="-fx-background-color: BLACK; -fx-border-color: WHITE; -fx-border-radius: 5PX;" text="Check Drops" textFill="WHITE" />
      <Label fx:id="StandardBannerTickets" layoutX="851.0" layoutY="562.0" prefHeight="39.0" prefWidth="385.0" text="Standard Banner Tickets:">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Button fx:id="convertButton" layoutX="209.0" layoutY="624.0" mnemonicParsing="false" onAction="#switchToConversion" prefHeight="39.0" prefWidth="152.0" style="-fx-background-color: BLACK; -fx-border-radius: 5PX; -fx-border-color: WHITE;" text="Convert Jades to Tickets" textFill="WHITE" />
      <Label fx:id="FourStarPityLabel" layoutX="209.0" layoutY="38.0" prefHeight="43.0" prefWidth="399.0" text="4* Standard Pity:">
         <font>
            <Font size="29.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label fx:id="FiveStarPityLabel" layoutX="608.0" layoutY="38.0" prefHeight="43.0" prefWidth="330.0" text="5* Standard Pity:" textFill="#f8f4f4">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <Label fx:id="jadeAmount" layoutX="295.0" layoutY="570.0" prefHeight="43.0" prefWidth="243.0" text="Jade Amount:" textFill="WHITE">
         <font>
            <Font size="29.0" />
         </font>
      </Label>
      <AnchorPane layoutX="945.0" layoutY="23.0" prefHeight="39.0" prefWidth="209.0" style="-fx-background-color: BLACK;" />
      <ImageView fitHeight="93.0" fitWidth="59.0" layoutX="236.0" layoutY="562.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/StellarJadeIcon.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="59.0" fitWidth="61.0" layoutX="787.0" layoutY="554.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/standardticket.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
